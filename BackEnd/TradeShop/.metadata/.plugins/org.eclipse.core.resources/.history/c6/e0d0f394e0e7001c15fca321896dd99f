		String stringConnection = "Server=PCBENDITA\\SQLEXPRESS:1433;Database=TradeShop;user=usuarioSQL;password=12345;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;";
		
		try {
			connection = DriverManager.getConnection(stringConnection);
			System.out.println("Nos conectamos");
		}catch(SQLException exception){
			throw GradesException.buildTechnicalException("It큦 not posible open a connection because the connection it큦 already is open");
		}
	}

